# A sample Gemfile
source 'https://rubygems.org'

gem 'sinatra'
gem 'activerecord', '<=5.1', :require => 'active_record'
gem 'sinatra-activerecord'
gem 'rake'
gem 'bcrypt' #stores a salted, hashed version of our users' passwords in our database in a column called password_digest. Essentially, once a password is salted and hashed, there is no way for anyone to decode it.
gem 'require_all'
gem 'capybara'
gem 'rack_session_access'
gem 'rack-test'
gem 'shotgun'
gem 'pry'

group :development do
gem 'sqlite3', '~>1.3.6'
  gem 'rspec'
  gem 'tux'
end
